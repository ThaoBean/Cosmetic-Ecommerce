                            <input type="text" placeholder="Address Reciever" />
                            <button type="submit" class="btn btn-default">Checkout</button>
                        </form>
                    </div>-->
                    <!--/login form-->
                <!--</div>
            </div>-->
            <div class="col-sm-6 pull-right">
                <div class="total_area">
                    <ul>
                        <li>Cart Sub Total <span>@string.Format("{0:#,##0}", total) đ</span></li>
                        <li>Shipping Cost <span>Free</span></li>
                        <li>Total <span>@string.Format("{0:#,##0}", total) đ</span></li>
                    </ul>
                    <a class="btn btn-default update" href="@Url.Action("Index", "_Home")">Continue Shopping</a>
                    <a class="btn btn-default check_out" href="@Url.Action("CheckOut", "_Orders")">Check Out</a>
                </div>
            </div>
        </div>
