@model WebApp.Areas.Admin.Models.UsersBLL
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Paper Stack</title>
    <link rel="stylesheet" type="text/css" href="~/Assets/admin/css/login.css" />
</head>
<body>
    <div class="container">
        <section id="content">
            @using (Html.BeginForm("Login", "Users", FormMethod.Post))
            {
                <h1>Login Form</h1>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <br />
                <div>
                    @Html.TextBoxFor(m => m.Name_User, new { @id = "username", @placeholder = "Username", @required = "" })
                    
                </div>
                <div>
                    @Html.PasswordFor(m => m.Password_User, new { @id = "password", @placeholder = "Password", @required = "" })
                    
                </div>

                <div>
                    <input type="submit" value="Log in" />
                    @*<a href="#">Lost your password?</a>*@
                    @*<a href="/Users/Register">Register</a>*@
                    @Html.ActionLink("Register", "Register")
                </div>
            }
            <!-- form -->
            <!-- <div class="button">
                <a href="#">Welcome</a>
            </div> -->
            <!-- button -->
        </section><!-- content -->
    </div><!-- container -->
</body>
</html>